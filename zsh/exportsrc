export ZSHRC="$HOME/.config/zsh/.zshrc"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"

export TERMINAL="kitty"
export BROWSER="librewolf"
export EDITOR="nvim"
export VISUAL="nvim"

export PATH=$PATH:/home/melon/.local/kitty.app/bin
export PATH=$PATH:/home/melon/.spicetify
export PATH=$PATH:/home/melon/.cargo/bin
export PATH=$PATH:/home/melon/.local/share/JetBrains/Toolbox/scripts
export PATH=$PATH:/home/melon/.local/share/bob/nvim-bin
export PATH=$PATH:/usr/local/go/bin

export KITTYDIR=~/.config/kitty
export NVIMDIR=~/.config/nvim
export NVM_DIR="$([ -z "${XDG_CONFIG_HOME-}" ] && printf %s "${HOME}/.nvm" || printf %s "${XDG_CONFIG_HOME}/nvm")"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"
