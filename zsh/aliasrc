# Package managers
alias apt='sudo apt'
alias nala='sudo nala'
alias dnf='sudo dnf'
alias pac='sudo pacman'

# Python
alias py='python3'

# Vim and Neovim
alias nv='nvim'
alias v='vim'

# Doom EMACS
alias doom='~/.config/emacs/bin/doom'

# Git
alias ga='git add'
alias gaa='git add --all'

alias gc='git commit'
alias gcm='git commit -m'

alias gps='git push'
alias gpl='git pull'
alias gcl='git clone'
alias gch='git checkout'

# Misc
alias neof='neofetch'
alias ht='htop'
